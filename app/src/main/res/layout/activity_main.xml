<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    
    <LinearLayout
        android:id="@+id/topSectionLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/searchFragmentFCV"
            android:name="com.example.pokewatchlist.fragments.SearchFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/watchlistFragmentFCV"
            android:name="com.example.pokewatchlist.fragments.WatchlistFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/profileFragmentFCV"
        android:name="com.example.pokewatchlist.fragments.ProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
